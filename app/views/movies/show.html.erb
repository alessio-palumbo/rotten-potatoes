<section class="header_movies">
  <a href="<%= movies_path %>" class="d-flex">
    <div class="header_logo p-2 align-self-center">
      <%= image_tag asset_path('potato.png'), height: 60 %>
    </div>
    <div class="header_title p-2 align-self-center">
      <h1>Rotten Potatoes</h1>
    </div>
  </a>
</section>

<section class="movie">
  <div class="movie_title d-flex justify-content-center align-items-end">
    <h2 class="p-2 align-items-center"><%= @movie.title %></h2>
    <span class="p-2"><%= @movie.year_released %></span>
  </div>

  <div class="movie_poster">
    <div class="movie_poster_image">
      
    </div>
  </div>

  <div class="movie_info">
    <div class="movie_content"><%= @movie.content_rating %> | <%= @movie.genre %></div>
    <div class="movie_avg_potato_score">
      <div class="potato_review_label">
        <h2>Avg Potato Score</h2>
      </div>
      <div class="potato_review_count">
        <p>Reviews</p>
      </div>
      <div class="potato_review_score">
        <h2><%= movie_rating @movie %></h2>
      </div>
    </div>
  </div>

  <div class="movie_description">
    <p><%= @movie.description %></p>
  </div>
</section>

<% if user_signed_in? %>
  <%= link_to 'Rate', new_movie_review_url(@movie), class: 'btn btn-primary' %> 
<% else %>
  <%= link_to 'Sign in to rate this movie', new_user_session_url, class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Back', movies_path %>

<section class="movie-reviews">
  <% @movie.reviews.each do |review| %>
    <p><%= review.user.username %><p>
    <p><%= review.comment %></p>
    <p><%= review.rating %></p>
  <% end %>
</section>
