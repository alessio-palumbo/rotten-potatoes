<a href="<%= movie_path(movie) %>">
  <div class="movies_item d-flex justify-content-between">
    <div class="movie_info p-2 d-flex">
      <div class="movie_image p-2 align-self-start">
        <div class="movie_poster"></div>
      </div>
      <div class="movie_details p-2 align-self-start">
        <div class="movie_title">
          <h3><%= movie.title %></h3>
        </div>
        <div class="movie_content_rating">
          <p><%= movie.content_rating %></p>
        </div>
        <div class="movie_review_count">
          <p>Reviews</p>
        </div>
      </div>
    </div>
    <div class="movie_rating p-2 align-self-center">
      <div class="movie_score">
        <h3>60</h3>
      </div>
    </div>
  </div>
</a>