<section class="search">
  <div class="search_bar">
    <%= form_tag(@movie, method: "get", class: 'd-flex justify-content-center') do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search movie", class: 'p-2 align-self-center' %>
      <%= submit_tag "Search", class: 'p-2 align-self-center' %>
    <% end %>
  </div>
</section>

<section class="movies">
  <div class="movies_section_title">
    <h2>This Week</h2>
  </div>
  <div class="movies_list">
    <%= render @this_week_movies %>
  </div>
</section>

<section class="movies">
  <div class="movies_section_title">
    <h2>All Time</h2>
  </div>
  <div class="movies_list">
    <%= render @movies %>
  </div>
</section>
